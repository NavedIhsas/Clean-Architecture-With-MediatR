@page
@model webHost.Pages.Customers.CreateModel
@{
    ViewData["Title"] = "Customer";
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="firstName">First Name</label>
                                        <input type="text" asp-for="Command.Firstname" id="firstName" class="form-control form-control-lg" required="" />
                                        <span asp-validation-for="Command.Firstname" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="lastName">Last Name</label>
                                        <input type="text" asp-for="Command.Lastname" id="lastName" class="form-control form-control-lg" />
                                        <span asp-validation-for="Command.Lastname" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="birthdayDate" class="form-label">Birthday</label>
                                        <input asp-for="Command.DateOfBirth" type="date" value="2000-01-01T00:00:00" class="form-control form-control-lg" id="birthdayDate" />
                                        <span asp-validation-for="Command.DateOfBirth" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">Email</label>
                                        <input asp-for="Command.Email" id="emailAddress" class="form-control form-control-lg" />
                                        <span asp-validation-for="Command.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">CardNumber</label>
                                        <input type="number" asp-for="Command.BankAccountNumber" id="CardNumber" class="form-control form-control-lg" />
                                        <span asp-validation-for="Command.BankAccountNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="phoneNumber">Phone Number (IR)</label>
                                        <input type="tel" asp-for="Command.PhoneNumber" id="phoneNumber" class="form-control form-control-lg" />
                                        <span asp-validation-for="Command.PhoneNumber" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>


                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-sm btn-rouded" type="submit" value="Submit" />
                                <a class="btn btn-info btn-sm btn-rounded btn-lg pull-right" style="float:right" href="/Customers/index"><i class="fa fa-back">Back to list</i></a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                                        }
