@page
@model webHost.Pages.Customers.UpdateModel
@{
}

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Update Form</h3>
                        <form method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="firstName"></label>
                                        <input type="text" asp-for="Query.Firstname" id="firstName" class="form-control form-control-lg" required="" />
                                        <span asp-validation-for="Query.Firstname" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <label class="form-label" for="lastName">Last Name</label>
                                        <input type="text" asp-for="Query.Lastname" id="lastName" class="form-control form-control-lg" />
                                        <span asp-validation-for="Query.Lastname" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <label for="birthdayDate" class="form-label">Birthday</label>
                                        <input asp-for="Query.DateOfBirth" type="date"  class="form-control form-control-lg" id="birthdayDate" />
                                        <span asp-validation-for="Query.DateOfBirth" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">Email</label>
                                        <input asp-for="Query.Email" id="emailAddress" class="form-control form-control-lg" />
                                        <span asp-validation-for="Query.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline">
                                        <label class="form-label" for="emailAddress">CardNumber</label>
                                        <input type="number" asp-for="Query.BankAccountNumber" id="CardNumber" class="form-control form-control-lg" />
                                        <span asp-validation-for="Query.BankAccountNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <label class="form-label" for="phoneNumber">Phone Number (IR)</label>
                                        <input type="tel" asp-for="Query.PhoneNumber" id="phoneNumber" class="form-control form-control-lg" />
                                        <span asp-validation-for="Query.PhoneNumber" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <input type="hidden" asp-for="Query.Id"/>
                            <div class="mt-4 pt-2">
                                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>